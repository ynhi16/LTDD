<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Address1"
    android:background="@drawable/nen">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/back_add"
            android:layout_width="85dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/back_white" />
        </FrameLayout>

        <TextView
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/lobsterregular"
            android:gravity="center"
            android:text="Address"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header">
        <Button
            android:id="@+id/btn_add1"
            android:layout_width="357dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_profile"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="48 Cao Thắng,Hải Châu,..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/pin"
            android:drawableRight="@drawable/next2"/>
        <Button
            android:id="@+id/btn_add2"
            android:layout_width="357dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_profile"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:text="26 Thanh Sơn, Hải Châu,..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/pin"
            android:drawableRight="@drawable/next2"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/btn_payment"
            android:layout_width="357dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_profile"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Xóm 1, Sơn Tùng , Quảng..."
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/pin"
            android:drawableRight="@drawable/next2"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="345dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/botron_nut10dp"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:drawableRight="@drawable/add1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/item1"
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/sao2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/item2"
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/bag2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/item3"
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/giohang2" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/item4"
            android:layout_width="103dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>